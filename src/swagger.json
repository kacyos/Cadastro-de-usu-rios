{
  "openapi": "3.0.0",
  "info": {
    "title": "User registration Documentation",
    "description": "This is an API user registration",
    "version": "1.0.0",
    "contact": {
      "name":"Cacio de Castro",
      "url":"https://www.caciodev.com/",
      "email": "cacio.castro@gmail.com"
    }
  },

  "paths": {
    "/users": {
      "get":{
      "tags": ["Users"],
      "summary": "Create user",
      "description": "Create a new user",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string" },
                "name": { "type": "string" },
                "password": { "type": "string" }                
              },
              "example": {
                "name": "user example",
                "email": "user@example.com",
                "password": "123s456"
              }
            }
          }
        }
        
      },
      "responses": {
        "201":{
          "description": "Success",
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                
                  "properties": {
                    "id": {
                      "type":"string"
                    },
                    "admin": {
                      "type":"boolean"
                    },
                    "email": {
                      "type":"string"
                    },
                    "name": {
                      "type":"string"
                    },
                    "created_at": {
                      "type":"string"
                    },
                    "updated_at": {
                      "type":"string"
                    }
                  }
                
              }
            }
          }
        },
        "400": {
          "description": "User already exists."
        }
      }
      }

      
  }
  }
}
